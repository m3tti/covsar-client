<h3>{{model.bundesland}}</h3>
<CovidDetails @data={{@model}}>
  <tr>
    <td>Bevoelkerung:</td>
    <td>{{format-number @model.bevoelkerungTotal}}</td>
    <td></td>
  </tr>
  <tr>
    <td>Infizierte:</td>
    <td>{{format-number @model.count}}</td>
    <td>{{calculate-percent @model.bevoelkerungTotal @model.count}}</td>
  </tr>
  <tr>
    <td>Tote:</td>
    <td>{{format-number @model.deaths}}</td>
    <td>{{calculate-percent @model.count @model.deaths}}% der Infizierten</td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td>{{calculate-percent @model.bevoelkerungTotal @model.deaths}}% der Bevoelkerung</td>
  </tr>
</CovidDetails>